@inject IHttpContextAccessor HttpContextAccessor
@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Add Admin View";
    string errorMsg = HttpContextAccessor.HttpContext.Session.GetString("errorMsg");
}
@section AdminHeader {
	@Html.Partial("AdminHeader")
}
@section AdminFooter {
	@Html.Partial("AdminFooter")
}
<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Thêm Admin</div>
                        <p style="color:red; display:block">
                            @errorMsg
                        </p>
                        <hr>
                        <form asp-action="AddAdminResult" asp-controller="Admin" method="post">

                            <div class="form-group">
                                <label for="input-2">Email Admin</label>
                                <input type="email" class="form-control" id="input-2" placeholder="Email Admin" name="admin_email">
                            </div>
                            <div class="form-group">
                                <label for="input-1">Password</label>
                                <input type="password" class="form-control" id="myinput" placeholder="Password" name="admin_password">
                                <input type="checkbox" onclick="myFunction1()">Hiển thị mật khẩu
                                <script>
                                    function myFunction1() {
                                                              var x = document.getElementById("myinput");
                                                              if (x.type === "password") {
                                                                x.type = "text";
                                                              } else {
                                                                x.type = "password";
                                                              }
                                                            }</script>
                            </div>
                            <div class="form-group">
                                <label for="input-2">Chuyên mục</label>
                                <div>
                                    <select class="form-control valid" id="input-6" name="role" aria-invalid="false">
                                        <option value="3">Quyền nhân viên</option>
                                        <option value="1">Quyền quản lý</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input-1">Tên Admin</label>
                                <input type="text" class="form-control" id="input-1" placeholder="Tên Admin" name="admin_name">
                            </div>
                            <div class="form-group">
                                <label for="input-1">Username</label>
                                <input type="text" class="form-control" id="input-1" placeholder="Username" name="admin_username">
                            </div>
                            <div class="form-group">
                                <label for="input-3">Phone Admin</label>
                                <input type="tel" class="form-control" id="input-3" placeholder="Phone Admin" name="admin_phone">
                            </div>
                            
                            <div class="form-footer">
                                <button class="btn btn-danger"><i class="fa fa-times"></i><a href="/Admin/Admin">Hủy</a></button>
                                <button type="submit" class="btn btn-success"><i class="fa fa-check-square-o"></i> Thêm</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="overlay toggle-menu"></div>
    </div>
</div> 