@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Admin View";
}
@model QLNS.ViewModels.Admin.AdminViewModel
@section AdminHeader {
	@Html.Partial("AdminHeader")
}
@section AdminFooter {
	@Html.Partial("AdminFooter")
}

<div class="content-wrapper">
    <div class="container-fluid">
        <!--End Row-->


        <div class="row">
            <div class="col-lg-12">
                <button class="add-catalog"><a href="/Admin/AddAdmin">Thêm Admin</a></button>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách Admin</h5>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Tên đăng nhập</th>
                                        <th scope="col">Tên Admin</th>
                                        <th scope="col">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(AdminDTO item in @Model.Admins)
                                    {
                                        <tr>
                                            <td scope="row">@item.Id</td>
                                            <td>@item.Username</td>
                                            <td>@item.Name</td>
                                            <td>
                                                <button class="btn btn-danger"><a href="#">Xóa</a></button>

                                                <button class="btn btn-success"><a href="#">Sửa</a></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 